{
    "tasks": {
        "browserSync": {
            "server": {
                "baseDir": "./build"
            },
            "host": "localhost",
            "logPrefix": "Frontend_Dev",
            "open": true
        },
        "js": {
            "src": [
                "./src/js/main.js",
                "./src/js/app.js"
            ],
            "dest": "./build/js/",
            "watch": "./src/js/**/*.js"
        },
        "css": {
            "src": "./src/sass/*.scss",
            "dest": "./build/css/",
            "watch": "./src/sass/**/*.scss",
            "autoprefixer": {
                "browsers": [
                    "last 100 version"
                ]
            }
        },
        "html": {
            "src": "./src/*.html",
            "dest": "./build/",
            "watch": "./src/**/*.html",
            "dataFile": "data/global.json"
        },
        "images": {
            "src": "./src/img/**/*.*",
            "dest": "./build/img/",
            "watch": "./src/img/**/*.*"
        },
        "fonts": {
            "src": "./src/fonts/**/*.*",
            "dest": "./build/fonts/",
            "watch": "./src/fonts/**/*.*"
        },
        "clean": "./build"
    }
}