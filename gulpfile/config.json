{
  "root": {
    "src": "./src",
    "dest": "./public"
  },
  "tasks": {
    "browserSync": {
      "server": {
        "baseDir": "./build"
      },
      "host": "localhost",
      "port": 9000,
      "logPrefix": "Frontend_Devil",
      "open": false
    },
    "static": {
      "src": "static",
      "dest": "./"
    },
    "js": {
      "src": [
        "./src/js/main.js",
        "./src/js/app.js"
      ],
      "dest": "./build/js/",
      "watch": "./src/js/**/*.js",
      "extractSharedJs": true,
      "entries": {
        "app": [
          "./app.js"
        ],
        "page": [
          "./page.js"
        ]
      },
      "extensions": [
        "js"
      ]
    },
    "css": {
      "src": "./src/sass/*.scss",
      "dest": "./build/css/",
      "watch": "./src/sass/**/*.scss",
      "autoprefixer": {
        "browsers": [
          "last 3 version"
        ]
      },
      "sass": {
        "indentedSyntax": true
      },
      "extensions": [
        "sass",
        "scss",
        "css"
      ]
    },
    "html": {
      "src": "./src/*.html",
      "dest": "./build/",
      "watch": "./src/**/*.html",
      "dataFile": "data/global.json",
      "htmlmin": {
        "collapseWhitespace": true
      },
      "extensions": [
        "html",
        "json"
      ],
      "excludeFolders": [
        "layouts",
        "shared",
        "macros",
        "data"
      ]
    },
    "images": {
      "src": "./src/img/**/*.*",
      "dest": "./build/img/",
      "watch": "./src/img/**/*.*",
      "extensions": [
        "jpg",
        "png",
        "svg",
        "gif"
      ]
    },
    "fonts": {
      "src": "./src/fonts/**/*.*",
      "dest": "./build/fonts/",
      "watch": "./src/fonts/**/*.*",
      "extensions": [
        "woff2",
        "woff",
        "eot",
        "ttf",
        "svg"
      ]
    },
    "iconFont": {
      "src": "icons",
      "dest": "fonts",
      "sassDest": "generated",
      "extensions": [
        "woff2",
        "woff",
        "eot",
        "ttf",
        "svg"
      ]
    },
    "svgSprite": {
      "src": "sprites",
      "dest": "images",
      "extensions": [
        "svg"
      ]
    },
    "clean": "./build"
  }
}